<!DOCTYPE html>
<html>

<head>
    <title>Login</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>

<body>
    <!-- navbar -->
    <%- include('navbar') %>
        <!-- form-->
        <div class="container d-flex flex-column align-items-center basket-page-style " style="height: 88vh;">
            <div class="row col-12">
                <div class="d-flex flex-column justify-content-center align-items-center">
                    <label for="sign-in">
                        <h2>My tickets :</h2>
                    </label>

                    <div class="table-responsive"></div>
                        <table class="table table-borderless bg-white text-dark tab-style">
                                <thead>
                                  <tr>
                                    <th scope="col">N°</th>
                                    <th scope="col">Journey</th>
                                    <th scope="col">Date</th>
                                    <th scope="col">Departure time</th>
                                    <th scope="col">Price</th>
                                  </tr>
                                </thead>
                                <tbody>
                                  <% var total =0; i = 1;
                                  for (element of tableau) {%>
                                  <tr>
                                    <th scope="row"><%=i++%></th>
                                    <td><%=element.departure%> / <%=element.arrival%></td>
                                    <td><%=new Date(element.date).toLocaleDateString()%></td>
                                    <td><%=element.departureTime%> pm</td>
                                    <td><%=element.price%> €</td>
                                  </tr>
                                  <%total += element.price}%>
                                  <tr class="color-lastline">
                                    <th scope="row ">Total</th>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td><%=total%>€</td>
                                </tbody>
                            
                    </table>
                    <div class="col-12 d-flex justify-content-end">
                    <a class="btn btn-danger  " href="/last-trips" role="button">Confirm</a>
                    </div>

                    <!-- Button trigger modal -->
<button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#exampleModal">
  Confirm
</button>

<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="myModalLabel">Modal title</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        ...
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>
                </div>
            </div>
        </div>
        <script src="../javascripts/script.js"></script>
</body>